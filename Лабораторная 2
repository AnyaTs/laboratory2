#include <stdio.h>
#include <stdlib.h>
int main()
{  
    int n; //Вводим величину для длины массива
    printf("Введите величину массива \n");
    scanf ("%i", &n);//узнаем длину массива
    int mas[n];//Вводим массив
    int sum = 0;//счетчик суммы
    for (int i = 0; i < n; i++)
    {
        mas[n] = rand()%100;//заполняем массив рандомными числами
        printf("%i ", mas[n]);//выводим на экран эти числа
        if (mas[n] % 2 != 0)// выполняется условие. Если условие работает, то суммируем нечетные числа.
            {
                sum += mas[n];
            }
    }
    printf("Сумма всех нечетных чисел: %i", sum);//выводим на экран сумму
    return 0;
}
